---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Banner from '/public/bannerVPSE.jpg';
import Image from 'astro/components/Image.astro';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
---

<!doctype html>
<html lang="es-VE" transition:animate="slide">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/gobierno.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Image src={Banner} alt="Banner" />
		<h1 class="mt-10 text-black text-2xl pb-10 text-center font-bold">REGISTRO DE INFORMACIÓN SOBRE EXPERIENCIAS Y/O POTENCIALIDADES VINCULADOS A LA SUSTITUCIÓN DE IMPORTACIONES</h1>
		<main class="mb-16" >
			<slot />
		</main>
	</body>
</html>
<style is:global>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
	}
	input, select, textarea, text {
		border: 1px solid black;
	}
</style>
